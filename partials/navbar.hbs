<header>

    <div class="page-main-flex bottom-margin-normal">

        <div class="left-sidebar-section">
            <!-- Left placeholder -->
        </div>

        <div class="main-section">
            {{! @website global variable used to display a logo and website name  }}
            {{! check if a Website logo exists, if not, dispaly the website name }}
            <div class="header-container">
                <div class="bordered-area no-padding selected-background">
                    <h1 class="no-margin">
                        <a id="logo" href="{{@website.url}}">
                            {{#if @website.logo}}
                                <img src="{{@website.logo}}" alt="{{@website.name}}">
                            {{else}}
                                {{@website.name}}
                            {{/if}}
                        </a>
                    </h1>
                </div>
            </div>
            {{! /check if a Website logo exists, if not, dispaly the website name }}
            {{! /@website global variable used to display a logo and website name  }}

            {{! check if a menu is assigned to the Main menu position }}
            {{#if menus.mainMenu}}
                {{> menu menus.mainMenu}}
            {{/if}}
            {{! /check if a menu is assigned to the Main menu position }}

            {{! display search plugin (searchbox: input + button) }}
            {{{@customSearchInput}}}
            {{! /display search plugin (searchbox: input + button) }}

        </div>

        <div class="right-sidebar-section">
            <!-- Right placeholder -->
        </div>

    </div>

</header>