<div class="sidebar-posts">
    {{! the list of posts generated by getPostsByTags helper }}
    <section class="sidebar-area bordered-area">
        <h3>{{ translate 'partials.sidebar.selectedPosts' }}</h3>
        <ul>

            {{! loop }}
            {{#getPostsByTags (concatenate "count=" @config.custom.amountSelectedtPosts "&tag_as=id&tags=" @config.custom.selectedPosts
                                      "&excluded=0&offset=0&orderby=modifiedAt&ordering=asc")}}
                <li>
                    <a href="{{url}}">{{title}}</a>
                </li>
            {{/getPostsByTags}}
            {{! /loop }}

        </ul>
    </section>
    {{! /the list of posts generated by getPostsByTags helper }}

    {{! the list of featured posts }}
    {{! check if featured posts exists}}
    {{#if featuredPosts}}
        <section class="sidebar-area bordered-area">
            <h3>{{ translate 'partials.sidebar.featuredPosts' }}</h3>

            <ul class="featured-posts__list">

                {{! loop generating a list of featured posts}}
                {{#each featuredPosts}}
                    <li>
                        <a href="{{url}}" class="invert">{{title}}</a>
                    </li>
                {{/each}}
                {{! /loop generating a list of featured posts}}

            </ul>
        </section>
    {{/if}}
    {{! /check if featured posts exists}}
    {{! /the list of featured posts }}

    {{! the list of authors }}
    {{! check if the authors section is enabled}}
    {{#if @config.custom.authors}}
        <section class="sidebar-area bordered-area">
            <!-- Word "authors" -->
            <h3>
                {{ translate 'partials.sidebar.authors' }}
            </h3>

            <div class="authors-list">

                {{! loop generating a list of authors }}
                {{#each authors}}
                    {{#checkIf @index '<' @config.custom.authorsNumber}} {{! the number of authors is specified in the theme option (located in Theme -> Sidebar)}}

                        <!-- Author -->
                        <div class="bordered-area centered-text author background-selected bordered-area">

                            <!-- Author name -->
                            <div>
                                <h4><a href="{{url}}">{{name}} ({{postsNumber}})</a></h4>
                            </div>

                            <!-- Author avatar -->
                            <div>
                                <a href="{{url}}" >
                                    <img
                                            class="author-avatar"
                                            src="{{avatarImage.url}}"
                                        {{lazyload "lazy"}}
                                            alt="{{avatarImage.alt}}"
                                            height="{{avatarImage.height}}"
                                            width="{{avatarImage.width}}">
                                </a>
                            </div>

                        </div>

                    {{/checkIf}}
                {{/each}}
                {{! /loop generating a list of authors }}

            </div>

        </section>
    {{/if}}
    {{! /check if the authors section is enabled}}
    {{! /the list of authors }}
</div>

